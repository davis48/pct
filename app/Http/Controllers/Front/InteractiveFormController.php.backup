    /**
     * Affiche un formulaire interactif spÃ©cifique
     */
    public function show($formType)
    {
        $validForms = [
            'certificat-mariage', 'certificat-celibat', 'extrait-naissance', 
            'certificat-deces', 'attestation-domicile', 'legalisation'
        ];

